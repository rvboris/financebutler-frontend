.tree
  li
    display none
    margin 0px 0
    list-style-type none
    position relative
    padding 14px 5px 0px 5px
    span.type
      margin-left 15px
    &:before
      content ''
      position absolute
      top 0
      width 1px
      height 100%
      right auto
      left -20px
      border-left 1px solid #ccc
      bottom 50px
    &:after
      content ''
      position absolute
      top 30px
      width 25px
      height 20px
      right auto
      left -20px
      border-top 1px solid #ccc
    &:last-child
      &:before
        height 30px

.tree > ul > li::before, .tree > ul > li:after
  border 0

.tree li a:hover, .tree li a:hover + ul li a
  background #c8e4f8
  color #000
  border 1px solid #94a0b4

.tree li a:hover + ul li::after, .tree li a:hover + ul li::before, .tree li a:hover + ul::before, .tree li a:hover + ul ul:before
  border-color #94a0b4